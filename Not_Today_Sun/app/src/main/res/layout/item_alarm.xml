            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alertType"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Delete"/>
    </LinearLayout>
